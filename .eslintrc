{
  "extends": [
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "standard",
    "prettier"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "react",
    "flowtype",
    "@emotion",
    "simple-import-sort",
    "prettier",
    "import"
  ],
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": "error",
    "semi": ["error", "never"],
    "comma-dangle": "off",
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],

    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "sort-imports": "off",
    "import/first": "error",
    "import/order": "off",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error"
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    },
    "react": {
      "version": "detect"
    }
  }
}
