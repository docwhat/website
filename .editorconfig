# EditorConfig: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
max_line_length = 78

[*.{json,svg,xml}]
indent_size = 4
max_line_length = off

[{package.json,*.yml,*rc}]
indent_size = 2
max_line_length = off
